@using MvcOnlineTicariOtomasyon.Models.Siniflar;
@model List<Departman>

@{
    ViewBag.Title = "DepartmanListele";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Departman Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var u in Model)
    {
        <tr>
            <td>@u.DepartmanId</td>
            <td>@u.DepartmanAd</td>    
            <td><a href="/Departman/DepartmanSil/@u.DepartmanId" class="btn btn-danger">Sil</a></td>
            <td><a href="/Departman/DepartmanGetir/@u.DepartmanId" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Departman/DepartmanDetay/@u.DepartmanId" class="btn btn-default" style="background-color:lightcoral; color: white" >Detaylar</a></td>
        </tr>
    }
</table>
<a href="/Departman/DepartmanEkle/" class="btn btn-info">Departman Ekle</a>

