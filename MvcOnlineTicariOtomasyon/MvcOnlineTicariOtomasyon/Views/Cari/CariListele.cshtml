@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<Cariler>
@{
    ViewBag.Title = "CariListele";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-striped">
    <tr>
        <th>Cari Id</th>
        <th>Cari Ad</th>
        <th>Cari Soyad</th>
        <th>Cari Şehir</th>
        <th>Cari Mail</th>
        <th>Güncelle</th>
        <th>Sil</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CariId</td>
            <td>@item.CariAd</td>
            <td>@item.CariSoyad</td>
            <td>@item.CariSehir</td>
            <td>@item.CariMail</td>
            <td><a href="/Cari/CariGuncelle/@item.CariId" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Cari/CariSil/@item.CariId" class="btn btn-danger">Sil</a></td>
            <td><a href="/Cari/CariDetaylar/@item.CariId" class="btn btn-secondary">Satış Geçmişi</a></td>
        </tr>
    }
</table>

<a href="/Cari/CariEkle" class="btn btn-primary">Ekle</a>

